<%= simple_form_for [@company] do |f| %>
<div class="container d-flex justify-content-center ">
  <div class=" m-2 p-3 border shadow-lg w-50">
    <form class="form ">
        <span class="signup mt-3">Company</span>
          <%= f.input :name_company, placeholder: 'Nombre de la compañía'  %>
          <%= f.input :description, placeholder: 'Descripcion' %>
          <div class="text-center">
            <%= link_to "Back To Companies", companies_path, class:"btn btn-primary mb-3 mt-3" %>
            <%= f.submit class: 'btn btn-success'%>
          </div>
    </form>
  </div>
</div>
<% end %>
