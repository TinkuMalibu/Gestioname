
<% if action_name == 'index' %>
  <% c = company %>
<% else %>
  <% c = @company %>
<% end %>

<%= simple_form_for [c] do |f| %>
          <%= f.input :name_company, placeholder: 'Company Name'  %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :logo, as: :file, class:'form-control', class:"p-4", accept: 'image/jpeg, image/jpg' %>
          <div class="text-center">
            <%= f.submit class: 'btn btn-success'%>
          </div>
<% end %>
