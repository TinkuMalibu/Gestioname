
<%= simple_form_for [@company] do |f| %>
          <%= f.input :name_company, placeholder: 'Company Name'  %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :logo, as: :file, class:'form-control', class:"p-4" %>
