<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
    <h1 class="modal-title fs-5 text-dark" id="exampleModalLabel1">New Expense</h1>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
          <div class="modal-body text-dark">
            <%= simple_form_for [@company, @expense] do |f| %>
              <%= f.input :item_name %>
              <%= f.input :description %>
              <%= f.input :date, order: [:day, :month, :year], html5:true %>
              <%= f.input :amount %>
              <%= f.select :expense_type_id, ExpenseType.where(company_id: @company.id).map { |et| [et.expense_category, et.id] } %>

                <%#= f.association :expense %>
              <p>
                <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                  Add Expense Type
                </a>
              </p>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                  <%= render "expense_types/new_modal_expense_type" %>
                </div>
              </div>
              <%= f.submit %>
            <% end %>
          </div>
        <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</div>
