<%= simple_form_for [@company, @income] do |f| %>
  <div class="container d-flex justify-content-center ">
    <div class=" m-3 p-3 border shadow-lg w-50">
      <form class="form ">
          <span class="signup mt-3">Income</span>
            <%= f.input :item_name %>
            <%= f.input :description %>
            <%= f.input :date, order: [:day, :month, :year], html5:true %>
            <%= f.input :amount %>
            <div class="text-center">
              <%= link_to "Back", company_path(@company), class:"btn btn-primary" %>
              <%= f.submit class: 'btn btn-success'%>
            </div>
      </form>
    </div>
  </div>
<% end %>
