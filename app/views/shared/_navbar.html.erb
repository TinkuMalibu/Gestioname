<div class="navbar navbar-expand-sm navbar-light navbar-lewagon-white navbar-lewagon fixed-top">
  <div class="container-fluid " >
      <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logopandaverdetexto2.png"%>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="row d-flex">
            <div class="col-6 align-self-center"><li><%= link_to "Go to Companies", companies_path, class:"nav-link btn btn-primary"%></li></div>
            <div class="col-6 align-self-center">
              <li class="nav-item active" class="font-color-name">
                <p class="badge bg-primary text-wrap">Hi,  <%= current_user.first_name %>!
                <br>
                plan: <%= current_user.subscription&.subscription_type&.capitalize %></p>
              </li>
            </div>
          </div>
          <li class="nav-item dropdown">
          <a href="#" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class:"avatar"%>
            <% else %>
              <%= image_tag "sinimagen.png", class:"avatar"%>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Account", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to " My Companies", companies_path, class: "dropdown-item" %>
              <% if user_signed_in? %>
              <% else %>
              <%= link_to "Sign in", "#", class: "dropdown-item" %>
              <% end %>
              <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <li class="nav-item">
            <%= link_to "START YOUR FREE TRIAL", new_user_registration_path, class:"btn btn-light", data: { turbo_frame:
            "signup_modal" } %>
            <%# <%= link_to "How it works", companies_path, class:"btn btn-light"%>
            <a href="#how-it-works" class="btn btn-light">How it works</a>
            <a href="#banner-subscription" class="btn btn-light">Pricing</a>
            <%= link_to "Log in", companies_path, class:"btn btn-light", data: { turbo_frame: "login_modal" }%>
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-light", data: { turbo_frame: "signup_modal" }%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
